{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "lib": ["es2022"],  // Only include ES2022 for Node.js, no DOM
    "newLine": "crlf"
  }
}
